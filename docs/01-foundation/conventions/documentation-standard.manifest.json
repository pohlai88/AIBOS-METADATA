{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "convention.documentation-standard",
  "type": "convention",
  "version": "1.0.0",
  "title": "Documentation Standards",
  "description": "Defines standards for writing, formatting, and organizing documentation across the AI-BOS Platform",
  "lastUpdated": "2025-11-24",
  "status": "active",
  "scope": "all",
  "governanceLevel": "strict",
  "document": {
    "path": "docs/01-foundation/conventions/documentation-standard.md",
    "format": "markdown",
    "source": "human-written",
    "mcpAutoGenerate": false,
    "humanEditable": true
  },
  "rules": [
    {
      "category": "markdown-format",
      "rules": [
        {
          "pattern": "required-elements",
          "appliesTo": ["all-documents"],
          "required": ["title", "metadata", "overview", "content", "related-links"],
          "enforcement": "strict"
        },
        {
          "pattern": "heading-hierarchy",
          "appliesTo": ["all-documents"],
          "enforcement": "strict",
          "levels": ["H1-title", "H2-sections", "H3-subsections", "H4-sparingly"]
        }
      ]
    },
    {
      "category": "code-examples",
      "rules": [
        {
          "pattern": "inline-code-backticks",
          "appliesTo": ["inline-references"],
          "enforcement": "strict"
        },
        {
          "pattern": "fenced-code-blocks",
          "appliesTo": ["code-examples"],
          "enforcement": "strict",
          "required": ["language-tag"]
        },
        {
          "pattern": "file-references",
          "appliesTo": ["existing-code"],
          "format": "startLine:endLine:filepath",
          "enforcement": "strict"
        }
      ]
    },
    {
      "category": "api-documentation",
      "rules": [
        {
          "pattern": "function-documentation",
          "appliesTo": ["api-functions"],
          "required": ["description", "parameters", "returns", "example"],
          "enforcement": "strict"
        },
        {
          "pattern": "component-documentation",
          "appliesTo": ["react-components"],
          "required": ["description", "props", "usage", "examples"],
          "enforcement": "strict"
        }
      ]
    },
    {
      "category": "cross-references",
      "rules": [
        {
          "pattern": "internal-links-relative",
          "appliesTo": ["internal-documentation"],
          "enforcement": "strict"
        },
        {
          "pattern": "external-links-descriptive",
          "appliesTo": ["external-resources"],
          "enforcement": "strict"
        }
      ]
    },
    {
      "category": "file-naming",
      "rules": [
        {
          "pattern": "kebab-case",
          "appliesTo": ["documentation-files"],
          "enforcement": "strict"
        },
        {
          "pattern": "descriptive-names",
          "appliesTo": ["documentation-files"],
          "enforcement": "strict"
        }
      ]
    }
  ],
  "templates": {
    "getting-started": {
      "sections": ["overview", "prerequisites", "installation", "quick-start", "next-steps"]
    },
    "api": {
      "sections": ["overview", "authentication", "endpoints", "request-response", "error-handling"]
    },
    "component": {
      "sections": ["overview", "props", "usage", "variants", "accessibility", "related"]
    },
    "architecture": {
      "sections": ["overview", "system-design", "components", "data-flow", "integration"]
    }
  },
  "validation": {
    "tools": [
      "validate_markdown_format",
      "validate_code_examples",
      "validate_cross_references",
      "validate_file_naming"
    ],
    "mcpServers": [
      "aibos-convention-validation",
      "aibos-documentation"
    ],
    "checks": [
      "markdown-structure",
      "code-example-format",
      "link-validation",
      "file-naming-compliance"
    ]
  },
  "related": {
    "documents": [
      "./naming.md",
      "./folder-structure.md",
      "./coding-standards.md"
    ],
    "governance": [
      "../../08-governance/documentation-governance.md"
    ],
    "mcpServers": [
      ".mcp/documentation/server.mjs"
    ]
  },
  "metadata": {
    "steward": "AI-BOS Platform Team",
    "reviewFrequency": "quarterly",
    "changeProcess": "documentation-governance.md",
    "tags": ["documentation", "markdown", "standards", "governance"]
  }
}


{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "convention.folder-structure",
  "type": "convention",
  "version": "1.0.0",
  "title": "Folder Structure Conventions",
  "description": "Defines folder structure conventions for the AI-BOS Platform monorepo, including package organization, app structure, and documentation layout",
  "lastUpdated": "2025-11-24",
  "status": "active",
  "scope": "monorepo",
  "governanceLevel": "strict",
  "document": {
    "path": "docs/01-foundation/conventions/folder-structure.md",
    "format": "markdown",
    "source": "human-written",
    "mcpAutoGenerate": false,
    "humanEditable": true
  },
  "rules": [
    {
      "category": "monorepo-structure",
      "pattern": "apps/ packages/ docs/ .mcp/",
      "appliesTo": ["root-directory"],
      "enforcement": "strict",
      "validation": "validate_directory_structure"
    },
    {
      "category": "package-structure",
      "pattern": "src/ package.json README.md",
      "appliesTo": ["packages"],
      "enforcement": "strict",
      "validation": "validate_package_structure"
    },
    {
      "category": "app-structure",
      "pattern": "app/ public/ next.config.ts",
      "appliesTo": ["nextjs-apps"],
      "enforcement": "strict",
      "validation": "validate_app_structure"
    },
    {
      "category": "mcp-server-structure",
      "pattern": "server.mjs package.json README.md tools/",
      "appliesTo": ["mcp-servers"],
      "enforcement": "strict",
      "validation": "validate_mcp_structure"
    },
    {
      "category": "documentation-structure",
      "pattern": "01-foundation/ 02-architecture/ ... 99-archive/",
      "appliesTo": ["docs-directory"],
      "enforcement": "strict",
      "validation": "validate_docs_structure"
    },
    {
      "category": "source-organization",
      "pattern": "src/ components/ design/ hooks/ lib/",
      "appliesTo": ["ui-package"],
      "enforcement": "strict",
      "validation": "validate_source_organization"
    }
  ],
  "structure": {
    "monorepo": {
      "required": ["apps/", "packages/", "docs/", ".mcp/"],
      "optional": [".cursor/", "scripts/"]
    },
    "package": {
      "required": ["src/", "package.json"],
      "optional": ["README.md", "tsconfig.json", "constitution/"]
    },
    "app": {
      "required": ["app/", "package.json"],
      "optional": ["public/", "next.config.ts"]
    },
    "mcpServer": {
      "required": ["server.mjs", "package.json"],
      "optional": ["README.md", "tools/"]
    }
  },
  "validation": {
    "tools": [
      "validate_directory_structure",
      "validate_package_structure",
      "validate_app_structure",
      "validate_mcp_structure",
      "validate_docs_structure"
    ],
    "mcpServers": [
      "aibos-convention-validation",
      "aibos-filesystem",
      "aibos-documentation"
    ],
    "checks": [
      "root-structure",
      "package-structure",
      "app-structure",
      "mcp-structure",
      "docs-structure"
    ]
  },
  "related": {
    "documents": [
      "./naming.md",
      "./coding-standards.md",
      "./documentation-standard.md"
    ],
    "architecture": [
      "../../07-mcp/servers/architecture.md"
    ],
    "mcpServers": [
      ".mcp/filesystem/server.mjs",
      ".mcp/documentation/server.mjs"
    ]
  },
  "metadata": {
    "steward": "AI-BOS Platform Team",
    "reviewFrequency": "quarterly",
    "changeProcess": "documentation-governance.md",
    "tags": ["folder-structure", "monorepo", "organization", "governance"]
  }
}


{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "convention.naming",
  "type": "convention",
  "version": "1.0.0",
  "title": "Naming Conventions",
  "description": "Defines naming conventions for files, components, functions, variables, and other code elements across the AI-BOS Platform monorepo",
  "lastUpdated": "2025-11-24",
  "status": "active",
  "scope": "all",
  "governanceLevel": "strict",
  "document": {
    "path": "docs/01-foundation/conventions/naming.md",
    "format": "markdown",
    "source": "human-written",
    "mcpAutoGenerate": false,
    "humanEditable": true
  },
  "rules": [
    {
      "category": "file-naming",
      "pattern": "kebab-case",
      "appliesTo": ["filenames", "directory-names"],
      "examples": ["button.tsx", "user-menu.tsx", "api-route.ts"],
      "enforcement": "strict"
    },
    {
      "category": "component-naming",
      "pattern": "PascalCase",
      "appliesTo": ["react-components", "component-names"],
      "examples": ["Button", "Dialog", "AppShell"],
      "enforcement": "strict"
    },
    {
      "category": "function-naming",
      "pattern": "camelCase",
      "appliesTo": ["functions", "methods", "variables"],
      "examples": ["validateComponent", "generateToken"],
      "enforcement": "strict"
    },
    {
      "category": "hook-naming",
      "pattern": "use[Purpose]",
      "appliesTo": ["react-hooks"],
      "examples": ["useState", "useMcpTheme"],
      "enforcement": "strict"
    },
    {
      "category": "constant-naming",
      "pattern": "UPPER_SNAKE_CASE",
      "appliesTo": ["constants", "true-constants"],
      "examples": ["MAX_LENGTH", "RATE_LIMIT_WINDOW"],
      "enforcement": "strict"
    },
    {
      "category": "package-naming",
      "pattern": "@aibos/[package-name]",
      "appliesTo": ["monorepo-packages"],
      "examples": ["@aibos/ui", "@aibos/utils"],
      "enforcement": "strict"
    },
    {
      "category": "mcp-server-naming",
      "pattern": "@aibos/mcp-[server-name]",
      "appliesTo": ["mcp-server-packages"],
      "examples": ["@aibos/mcp-react-validation", "@aibos/mcp-theme"],
      "enforcement": "strict"
    }
  ],
  "validation": {
    "tools": [
      "validate_filenames",
      "validate_component_names",
      "validate_imports",
      "validate_package_names"
    ],
    "mcpServers": [
      "aibos-convention-validation",
      "aibos-component-generator",
      "react-validation"
    ],
    "checks": [
      "filename-pattern",
      "component-name-pattern",
      "function-name-pattern",
      "package-name-pattern"
    ]
  },
  "related": {
    "constitution": [
      "../../../packages/ui/constitution/components.yml"
    ],
    "documents": [
      "./folder-structure.md",
      "./coding-standards.md",
      "./documentation-standard.md"
    ],
    "mcpServers": [
      ".mcp/react/server.mjs",
      ".mcp/component-generator/server.mjs"
    ]
  },
  "metadata": {
    "steward": "AI-BOS Platform Team",
    "reviewFrequency": "quarterly",
    "changeProcess": "documentation-governance.md",
    "tags": ["naming", "conventions", "standards", "governance"]
  }
}


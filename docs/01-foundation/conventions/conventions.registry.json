        "domain": "documentation",
        "category": "convention",
        "governanceLevel": "strict",
        "scope": "all",
        "lastUpdated": "2025-11-24",
        "steward": "AI-BOS Platform Team",
        "tags": ["naming", "conventions", "standards", "governance"],
        "validation": {
          "tools": ["validate_filenames", "validate_component_names", "validate_imports", "validate_package_names"],
          "mcpServers": ["aibos-convention-validation", "aibos-component-generator", "react-validation"]
        },
        "related": {
          "documents": [
            "convention.folder-structure",
            "convention.coding-standards",
            "convention.documentation-standard"
          ],
          "constitution": [
            "packages/ui/constitution/components.yml"
          ]
        }
      },
      {

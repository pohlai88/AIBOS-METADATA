# Enable strict peer dependencies
strict-peer-dependencies=false

# Use pnpm's public hoisting pattern
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@next/eslint-plugin-next
# Force hoist Tailwind CSS PostCSS plugin for Turbopack compatibility
public-hoist-pattern[]=@tailwindcss/postcss
public-hoist-pattern[]=@tailwindcss/forms
public-hoist-pattern[]=@tailwindcss/typography
public-hoist-pattern[]=tailwindcss
public-hoist-pattern[]=postcss

# Shamefully hoist Next.js dependencies for better compatibility
shamefully-hoist=true

# Auto install peers
auto-install-peers=true


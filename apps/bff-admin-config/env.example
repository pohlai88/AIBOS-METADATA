# ==========================================
# DATABASE (Required) - Supabase
# ==========================================
# Get password from: Supabase Dashboard → Settings → Database → Database password
# Project: cnlutbuzjqtuicngldak
DATABASE_URL=postgresql://postgres.cnlutbuzjqtuicngldak:YOUR_PASSWORD@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres

# Connection Pool
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=20
DB_CONNECT_TIMEOUT=10

# ==========================================
# AUTHENTICATION (Required)
# ==========================================
# Generate: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# ==========================================
# SERVICE CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug
SERVICE_NAME=bff-admin-config
SERVICE_VERSION=1.0.0

# ==========================================
# CORS (Allowed Origins)
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

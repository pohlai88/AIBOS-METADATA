      {/* Sun/Moon Indicator */}
      <div 
        className="absolute w-[300px] h-[300px] top-0 transition-transform duration-1000 ease-linear"
        style={{ transform: `rotate(${rotation - 90}deg)` }}
      >
        <div className="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-4">
           {mode === 'day' ? (

// --- Visualizations ---

const PolicyWallVisualization = ({ mode }) => {
  // Simulate particles flowing from External (Left) to Internal (Right)
  // Rejection at the wall (Center)
  
  const [particles, setParticles] = useState([]);
  
  useEffect(() => {
    const interval = setInterval(() => {
      const id = Math.random().toString(36).substr(2, 9);
      const isCompliant = Math.random() > 0.3; // 70% chance of compliance
      
      setParticles(prev => [
        ...prev, 
        { id, isCompliant, progress: 0, status: 'traveling' }
      ].slice(-20)); // Keep max 20 particles to avoid lag
    }, 800);
    return () => clearInterval(interval);
  }, []);

  useEffect(() => {
    const moveInterval = setInterval(() => {
      setParticles(prev => prev.map(p => {
        let newProgress = p.progress + 2;
        let newStatus = p.status;

        // Hit the wall at 50%
        if (p.progress >= 48 && p.progress <= 52) {
          if (!p.isCompliant) {
            newStatus = 'rejected';
            newProgress = 50; // Stop at wall
          } else {
            newStatus = 'accepted';
          }
        }
        
        // Remove after completion or rejection fade
        if (newProgress > 100) newStatus = 'finished';
        
        return { ...p, progress: newProgress, status: newStatus };
      }).filter(p => p.status !== 'finished' && !(p.status === 'rejected' && Math.random() > 0.95))); 
    }, 50);
    return () => clearInterval(moveInterval);
  }, []);

  return (
    <div className="relative h-64 w-full bg-slate-900/50 rounded-xl border border-white/5 overflow-hidden flex items-center">
      {/* Background Grid */}
      <div className="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:20px_20px]"></div>
      
      {/* Zones */}
      <div className="absolute inset-y-0 left-0 w-1/2 flex items-start justify-center pt-4">
        <span className="text-xs font-mono text-slate-500 tracking-widest uppercase">External Domain</span>
      </div>
      <div className="absolute inset-y-0 right-0 w-1/2 flex items-start justify-center pt-4">
        <span className={`text-xs font-mono tracking-widest uppercase ${mode === 'day' ? 'text-emerald-500/50' : 'text-blue-500/50'}`}>Internal Core</span>
      </div>

      {/* The Wall */}
      <div className="absolute left-1/2 top-0 bottom-0 w-1 -ml-0.5 z-10">
        <div className="h-full w-full bg-gradient-to-b from-transparent via-rose-500/50 to-transparent shadow-[0_0_15px_rgba(244,63,94,0.4)]"></div>
        <div className="absolute top-1/2 -translate-y-1/2 -left-3 bg-rose-950/80 border border-rose-500/30 text-rose-400 p-1 rounded-full">
          <Lock size={12} />
        </div>
      </div>

      {/* Particles */}
      {particles.map(p => (
        <div 
          key={p.id}
          className={`absolute top-1/2 -translate-y-1/2 w-3 h-3 rounded-full transition-all duration-75 shadow-sm
            ${p.status === 'rejected' ? 'bg-red-500 scale-150 animate-ping opacity-0' : ''}
            ${p.status === 'accepted' ? (mode === 'day' ? 'bg-emerald-400 shadow-[0_0_10px_#34d399]' : 'bg-blue-400 shadow-[0_0_10px_#60a5fa]') : ''}
            ${p.status === 'traveling' ? 'bg-slate-400' : ''}
          `}
          style={{ 
            left: `${p.progress}%`,
            marginTop: `${(parseInt(p.id, 36) % 100) - 50}px` // Random vertical scatter
          }}
        >
          {p.status === 'traveling' && <div className="absolute right-full mr-1 top-1/2 -translate-y-1/2 w-8 h-[1px] bg-gradient-to-r from-transparent to-slate-400/50"></div>}
        </div>
      ))}
      
      {/* Labels */}
      <div className="absolute bottom-4 left-4 text-[10px] text-slate-500 flex gap-4">
        <div className="flex items-center gap-2"><div className="w-2 h-2 rounded-full bg-slate-400"></div> Raw Data</div>
        <div className="flex items-center gap-2"><div className="w-2 h-2 rounded-full bg-red-500"></div> Rejected</div>
        <div className="flex items-center gap-2"><div className="w-2 h-2 rounded-full bg-emerald-400"></div> Validated</div>
      </div>
    </div>
  );
};


{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "api/**/*",
    "schemas/**/*",
    "services/**/*",
    "db/**/*",
    "mcp/**/*",
    "bootstrap/**/*",
    "events/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}

